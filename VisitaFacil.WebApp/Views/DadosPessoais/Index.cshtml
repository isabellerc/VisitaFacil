@using VisitaFacil.Dominio.Entities; 
@model IEnumerable<DadosPessoais>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Cpf</th>
            <th>dataNascimento</th>
            <th>Endereco</th>
            <th>Telefone1</th>
            <th>Telefone2</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ID
                </td>
                <td>
                    @item.Nome
                </td>
                <td>
                    @item.Cpf
                </td>
                <td>
                    @item.dataNascimento
                </td>
                <td>
                    @item.Endereco
                </td>
                <td>
                    @item.Telefone1
                </td>
                <td>
                    @item.Telefone2
                </td>
                <td>
                    @item.Email
                </td>
               
                <td>
                    <a class="btn btn-danger btn-xs" asp-action="Excluir" asp-controller="DadosPessoais" asp-route-funcionarioId="@item.ID">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@300&display=swap" rel="stylesheet">
    <title>Cadastro do Idoso </title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.6/jquery.inputmask.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>
<body>

    <div class="body-container">
        <div class="container" id="container">
            <div>
                <div class="form-container sign-up-container">
                    @*//aqui é o formulário de cadastro:*@
                    <form asp-action="Post" asp-controller="Idoso" method="post">
                        <h1>Cadastrar Novo Idoso</h1>
                        <p></p>
                        <div class="flex-container">
                            <div class="flex-item">
                                <label for="Nome">Nome Completo</label>
                                <input type="text" id="Nome" name="Nome" @*placeholder="Nome Completo"*@ asp-for="Nome" />
                            </div>
                            <div class="flex-item">
                                <label for="cpf">CPF</label>
                                <input type="text" id="cpf" name="Cpf" @*placeholder="CPF"*@ asp-for="Cpf" />
                            </div>
                            <div class="flex-item">
                                <label for="dataNascimento">Data de Nascimento</label>
                                <input type="date" id="dataNascimento" name="dataNascimento" placeholder="Data de Nascimento" asp-for="dataNascimento" />
                            </div>

                            <div class="flex-item">
                                <label for="Telefone">Telefone</label>
                                <input type="string" id="Telefone" name="Telefone" @*placeholder="Telefone"*@ asp-for="Telefone" />
                            </div>

                            <div class="flex-item">
                                <label for="Email">E-mail</label>
                                <input type="email" id="Email" name="Email" @*placeholder="E-mail"*@ asp-for="Email" />
                            </div>
                        </div>
                        <button type="submit" id="btnCadastrar" class="btn-grad">Cadastrar</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
   
    <script type="text/javascript" src="index.js"></script>
    <script>
        // Código do JavaScript aqui
    </script>
    <script src="/js/site.js"></script>
   <script>
        @*//botao de btnCadastrar*@
            const btnCadastrar = document.getElementById('btnCadastrar');
        btnCadastrar.addEventListener('click', () => {
            alert('Idoso Cadastrado com Sucesso');
            container.classList.add('left-panel-active');

        });
   </script>
  
</body>

</html>

 



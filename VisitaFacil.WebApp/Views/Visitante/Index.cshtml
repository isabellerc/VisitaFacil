@using VisitaFacil.Dominio.Entities;
@model IEnumerable<Visitante>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Data de Nascimento</th>
            <th>CEP</th>
            <th>Rua</th>
            <th>Número</th>
            <th>Complemento</th>
            <th>Bairro</th>
            <th>Cidade</th>
            <th>UF</th>
            <th>Telefone</th>
            <th>E-mail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
            @item.idVisitante
            </td>
                <td>
                    @item.Nome
                </td>
                <td>
                    @item.Cpf
                </td>
                <td>
                    @item.dataNascimento.ToString("dd/MM/yyyy")

                </td>
                <td>
                    @item.CEP
                </td>
                <td>
                    @item.Logradouro
                </td>
                <td>
                    @item.Numero
                </td>
                <td>
                    @item.Complemento
                </td>
                <td>
                    @item.Bairro
                </td>
                <td>
                    @item.Cidade
                </td>
                <td>
                    @item.Estado
                </td>
                <td>
                    @item.Telefone
                </td>
                <td>
                    @item.Email
                </td>

                <td>
                    <a class="btn btn-info btn-xs" asp-action="Editar" asp-controller="Visitante" asp-route-id="@item.idVisitante">
                        <i class="glyphicon glyphicon-edit"></i> Editar
                    </a>

            <a class="btn btn-danger btn-xs" asp-action="excluir" asp-controller="Visitante" asp-route-id="@item.idVisitante"> 
            <i class="glyphicon glyphicon-trash"></i> Excluir
            </a>
            </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-info btn-xs" href="javascript:history.go(-1)" class="btn-grad">Voltar</a>

@model VisitaFacil.Dominio.Entities.Idoso
@{
    ViewData["Title"] = "Editar Idoso";
}

<script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

<form asp-action="Editar" asp-controller="Idoso" method="post">
    <h1 style="text-align: center">Editar Idoso</h1>
    <div class="flex-item">
        <label for="Nome">Nome Completo</label>
        <input type="text" id="Nome" name="Nome" asp-for="Nome" value="@Model.Nome" />
    </div>
    <div class="flex-item">
        @Html.ValidationMessageFor(a => a.Cpf)
        <label for="cpf">CPF</label>
        <input type="text" id="cpf" name="Cpf" asp-for="Cpf" value="@Model.Cpf" />
    </div>
    <div class="flex-item">
        <label for="dataNascimento">Data de Nascimento</label>
        <input type="date" id="dataNascimento" name="dataNascimento" asp-for="dataNascimento" value="@Model.dataNascimento.ToString("yyyy-MM-dd")" />
    </div>
    <div class="flex-item">
        <label for="Telefone">Telefone</label>
        <input type="string" id="telefone" name="Telefone" asp-for="Telefone" value="@Model.Telefone" />
    </div>
    <div class="flex-item">
        <label for="Email">E-mail</label>
        <input type="email" id="Email" name="Email" asp-for="Email" value="@Model.Email" />
    </div>
   
<br><br/>
<div class="flex-container">
        <a href="@Url.Action("Index", "Idoso")" class="btn-grad-cinza">Voltar</a>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <span class="error-message">@ViewBag.ErrorMessage</span>
        }

    <button type="submit" id="btnEditar" class="btn-grad">Editar</button>
</div>

    <input type="hidden" asp-for="idIdoso" />
</form>


<script>
    const container = document.getElementById('container');
    const btnEditar = document.getElementById('btnEditar');

    btnEditar.addEventListener('click', () => {
        alert('Edição Realizada com Sucesso');
        container.classList.add('left-panel-active');
        return RedirectToAction("Index");
    });
</script>


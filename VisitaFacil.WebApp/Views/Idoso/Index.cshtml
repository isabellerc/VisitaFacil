@using VisitaFacil.Dominio.Entities;
@model IEnumerable<Idoso>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Data de Nascimento</th>
            <th>Telefone</th>
            <th>E-mail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.idIdoso
                </td>
                <td>
                    @item.Nome
                </td>
                <td>
                    @item.Cpf
                </td>
                <td>
                    @item.dataNascimento.ToString("dd/MM/yyyy")

                </td>
               
                <td>
                    @item.Telefone
                </td>
               
                <td>
                    @item.Email
                </td>

                <td>
                    <a class="btn btn-info btn-xs" asp-action="Editar" asp-controller="Idoso" asp-route-id="@item.idIdoso">
                        <i class="glyphicon glyphicon-edit"></i> Editar
                    </a>

                    <a class="btn btn-danger btn-xs" asp-action="excluir" asp-controller="Idoso" asp-route-id="@item.idIdoso">
                        <i class="glyphicon glyphicon-trash"></i> Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-info btn-xs" href="javascript:history.go(-1)" class="btn-grad">Voltar</a>